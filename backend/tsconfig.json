{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2023.Array", "DOM", "ESNext"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
